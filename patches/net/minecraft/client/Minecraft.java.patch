+            ARBShaderObjects.glUniform1fARB(_LanczosShader_texelHeightOffsetUniform, 0.0f);
+            ARBShaderObjects.glUniform1iARB(_LanczosShader_inputImageTextureUniform, 0);
+
+            GL11.glClear(GL11.GL_COLOR_BUFFER_BIT);
+
+            // Pass 1
